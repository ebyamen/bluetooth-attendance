<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/number_scans_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:gravity="center"
        android:hint="Tarama Sayısı"
        android:inputType="number" />

    <EditText
        android:id="@+id/value_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:hint="Sınıf Mevcudu"
        android:inputType="number" />

    <CheckBox
        android:id="@+id/date_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:buttonTint="@color/main_blue_dark"
        android:text="Tarih Seçimi" />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/select_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_blue"
        android:text="Select Date"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <Button
        android:id="@+id/scan_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_blue"
        android:text="Şimdi Tara"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/direct_mark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/main_blue"
        android:text="Tarama Yapmadan Devam Et"
        android:textColor="@color/white" />
</LinearLayout>